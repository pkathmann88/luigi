[Unit]
Description=Mario Motion Detection Service
Documentation=https://github.com/pkathmann88/luigi
After=network.target

[Service]
Type=simple
# Note: root is required for GPIO access via RPi.GPIO library
# TODO: Consider using gpio group and udev rules for non-root access
User=root
ExecStart=/usr/bin/python3 /usr/local/bin/mario.py
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/motion.log
StandardError=append:/var/log/motion.log

# Security hardening
PrivateTmp=yes
NoNewPrivileges=yes

# Graceful shutdown
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
