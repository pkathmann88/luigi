{
  "name": "luigi-api-server",
  "version": "1.0.0",
  "description": "Secure Node.js API server for Raspberry Pi Zero W with GPIO control",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:security": "bash scripts/security-test.sh",
    "audit": "npm audit --audit-level=moderate",
    "audit-fix": "npm audit fix",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "raspberry-pi",
    "gpio",
    "iot",
    "rest-api",
    "express",
    "hardware-control"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.0.3",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "winston": "^3.8.2",
    "morgan": "^1.10.0",
    "joi": "^17.9.2",
    "onoff": "^6.0.3",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22",
    "eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pkathmann88/luigi"
  }
