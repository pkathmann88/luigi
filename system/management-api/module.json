{
  "name": "management-api",
  "version": "1.0.0",
  "description": "Secure Node.js REST API server for Luigi system management and Raspberry Pi control",
  "category": "system",
  "capabilities": [
    "service",
    "api",
    "config"
  ],
  "dependencies": [],
  "apt_packages": [
    "nodejs",
    "npm",
    "openssl",
    "curl"
  ],
  "author": "Luigi Project",
  "provides": {
    "api_endpoints": [
      "/api/modules",
      "/api/system",
      "/api/logs",
      "/api/config",
      "/api/monitoring",
      "/health"
    ]
  },
  "requires": {
    "node_version": ">=16.0.0"
  }
}
