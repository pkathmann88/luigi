{
  "name": "system-info",
  "version": "1.0.0",
  "description": "System information monitoring with MQTT publishing to Home Assistant",
  "category": "system",
  "dependencies": [
    "iot/ha-mqtt"
  ],
  "apt_packages": [
    "python3-psutil"
  ],
  "author": "Luigi Project",
  "provides": {
    "sensors": [
      "system_uptime",
      "system_cpu_temp",
      "system_memory_usage",
      "system_disk_usage",
      "system_cpu_usage"
    ]
  }
}
